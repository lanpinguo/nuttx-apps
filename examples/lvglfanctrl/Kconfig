#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

menuconfig EXAMPLES_LVGLFANCTRL
	tristate "LVGL Fan ctrl demo"
	default n
	depends on GRAPHICS_LVGL
	---help---
		Enable build the Light and Versatile Graphics Library Fan ctrl Demo programs

if EXAMPLES_LVGLFANCTRL

config EXAMPLES_LVGLFANCTRL_PRIORITY
	int "lvglfanctrl task priority"
	default 100

config EXAMPLES_LVGLFANCTRL_STACKSIZE
	int "lvglfanctrl stack size"
	default 16384

endif # EXAMPLES_LVGLFANCTRL
